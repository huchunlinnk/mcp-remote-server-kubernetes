# 服务器配置
PORT=3000
HOST=0.0.0.0

# CORS 配置
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# 速率限制配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Kubernetes 配置
KUBECONFIG=
K8S_IN_CLUSTER=false
K8S_NAMESPACE=default
K8S_TIMEOUT=30000

# 认证配置
AUTH_ENABLED=true
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=
LOG_CONSOLE=true